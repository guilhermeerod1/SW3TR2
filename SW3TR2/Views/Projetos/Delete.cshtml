@model SW3TR2.Models.Projeto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><strong>Exclusão de Projeto</strong></div>
    <div class="panel-body">
        <div>
            <h3>Deseja realmente excluir este Projeto?</h3>
            <hr />
            <dl class="dl-horizontal">

                <dt>Nome:</dt>
                <dd>@Html.DisplayFor(model => model.Nome)</dd>

                <dt>Descrição:</dt>
                <dd>@Html.DisplayFor(model => model.Descricao)</dd>

                <dt>Emissão:</dt>
                <dd>@Html.DisplayFor(model => model.Emissao)</dd>

            </dl>
        </div>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-danger" />
                @Html.ActionLink("Voltar a Projetos", "Index", null, htmlAttributes: new { @class = "btn btn-primary"})
            </div>
        }
    </div>
</div>

