@model IEnumerable<SW3TR2.Models.Caso>

@{
    ViewBag.Title = "Casos de Teste";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">Casos de Teste</div>
    <div class="panel-body">
        <table class="table table-responsive table-hover">
            <tr>
                <th>Plano de Teste</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Prioridade</th>
                <th>Status</th>
                <th>Emissão</th>
                <th>Prazo</th>
                <th>Data de Fechamento</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plano.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prioridade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emissao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prazo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fechamento)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Novo Caso de Teste", "Create", null, htmlAttributes: new { @class = "btn btn-primary"})
    </div>
</div>
