@model SW3TR2.Models.Plano

@{
    ViewBag.Title = "Exclusão do Plano de Teste";
    Layout = "~/Views/Shared/_Template.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">Exclusão do Plano de Teste</div>
    <div class="panel-body">
        <div>
            <h4>Deseja realmente excluir este Plano de Teste?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Projeto:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Projeto.Nome)
                </dd>

                <dt>Nome:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>Descrição:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>

                <dt>Status:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>

                <dt>Prioridade:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Prioridade)
                </dd>

                <dt>Emissão:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Emissao)
                </dd>

                <dt>Prazo:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Prazo)
                </dd>

                <dt>Fechamento:</dt>
                <dd>
                    @Html.DisplayFor(model => model.Fechamento)
                </dd>

            </dl>
        </div>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-danger" />
                @Html.ActionLink("Voltar aos Planos de Teste", "Index", null, htmlAttributes: new { @class = "btn btn-primary"})
            </div>
        }
    </div>
</div>
